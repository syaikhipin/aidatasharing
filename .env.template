# AI Share Platform - Unified Environment Configuration Template
# Copy this file to .env and update the values for your environment

#==============================================================================
# CORE SERVICE CONFIGURATION
#==============================================================================

# Database Configuration (SQLite for unified storage)
DATABASE_URL=sqlite:///../storage/aishare_platform.db

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

#==============================================================================
# SERVICE ENDPOINTS CONFIGURATION
#==============================================================================

# Backend Service
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Frontend Service  
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# MindsDB Service
MINDSDB_HOST=127.0.0.1
MINDSDB_PORT=47334
MINDSDB_PROTOCOL=http
MINDSDB_DATABASE=mindsdb
MINDSDB_USERNAME=
MINDSDB_PASSWORD=

#==============================================================================
# PROXY SERVICE CONFIGURATION
#==============================================================================

# Proxy Ports (all configurable)
MYSQL_PROXY_PORT=10101
POSTGRESQL_PROXY_PORT=10102
API_PROXY_PORT=10103
CLICKHOUSE_PROXY_PORT=10104
MONGODB_PROXY_PORT=10105
S3_PROXY_PORT=10106
SHARED_LINK_PROXY_PORT=10107

# Proxy Service Settings
PROXY_TIMEOUT=30
PROXY_MAX_RETRIES=3
PROXY_RETRY_DELAY=1.0
PROXY_SSL_VERIFY=true
PROXY_SSL_CERT_PATH=
PROXY_SSL_KEY_PATH=

#==============================================================================
# AI/ML INTEGRATION CONFIGURATION
#==============================================================================

# Google AI API Configuration
GOOGLE_API_KEY=
GOOGLE_API_BASE_URL=https://generativelanguage.googleapis.com/v1

# OpenAI API Configuration (optional)
OPENAI_API_KEY=
OPENAI_API_BASE_URL=https://api.openai.com/v1

# Anthropic API Configuration (optional)
ANTHROPIC_API_KEY=

# AI Model Configuration
DEFAULT_GEMINI_MODEL=gemini-2.0-flash
GEMINI_ENGINE_NAME=google_gemini_engine
GEMINI_CHAT_MODEL_NAME=gemini_chat_assistant
GEMINI_VISION_MODEL_NAME=gemini_vision_assistant
GEMINI_EMBEDDING_MODEL_NAME=gemini_embedding_assistant

#==============================================================================
# DATA STORAGE CONFIGURATION
#==============================================================================

# Local Storage Configuration
STORAGE_TYPE=local
STORAGE_BASE_PATH=./storage
TEMPORARY_FILES_PATH=./storage/temp
UPLOAD_PATH=./storage/uploads
DOCUMENT_STORAGE_PATH=./storage/documents
IMAGE_STORAGE_PATH=./storage/images

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=

# S3 Compatible Storage Configuration (MinIO, Backblaze, etc.)
S3_COMPATIBLE_ENDPOINT=
S3_COMPATIBLE_ACCESS_KEY=
S3_COMPATIBLE_SECRET_KEY=
S3_COMPATIBLE_BUCKET_NAME=
S3_COMPATIBLE_REGION=us-east-1
S3_COMPATIBLE_USE_SSL=true
S3_COMPATIBLE_ADDRESSING_STYLE=auto

#==============================================================================
# FILE UPLOAD AND PROCESSING CONFIGURATION
#==============================================================================

# File Upload Security
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=csv,json,xlsx,xls,txt,pdf,docx,doc,rtf,odt,jpg,jpeg,png,gif,bmp,tiff,webp,svg
SCAN_UPLOADED_FILES=true

# Image Processing Configuration
ENABLE_IMAGE_PROCESSING=true
MAX_IMAGE_SIZE_MB=25
IMAGE_THUMBNAIL_SIZE=300
SUPPORTED_IMAGE_TYPES=jpg,jpeg,png,gif,bmp,tiff,webp,svg

# Document Processing Configuration
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_DOCUMENT_TYPES=pdf,docx,doc,txt,rtf,odt

# PDF Processing Configuration
ENABLE_PDF_PROCESSING=true
PDF_PREVIEW_MAX_WIDTH=400
PDF_TEXT_EXTRACTION_MAX_PAGES=10
PDF_PROCESSING_LIBRARIES=PyPDF2,PyMuPDF

#==============================================================================
# DATABASE CONNECTOR CONFIGURATION
#==============================================================================

# Data Connector Settings
ENABLE_DATABASE_CONNECTORS=true
ENABLE_S3_CONNECTOR=true
ENABLE_EXTERNAL_API_CONNECTORS=true
MAX_CONNECTORS_PER_ORG=10

# Connection Timeouts
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_QUERY_TIMEOUT=300
CONNECTOR_CONNECTION_TIMEOUT=30
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_MAX_RETRIES=3

#==============================================================================
# DATA SHARING CONFIGURATION
#==============================================================================

# Data Sharing Features
ENABLE_DATA_SHARING=true
ENABLE_AI_CHAT=true
SHARE_LINK_EXPIRY_HOURS=24
MAX_CHAT_SESSIONS_PER_DATASET=10

#==============================================================================
# API SECURITY AND RATE LIMITING
#==============================================================================

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_HOUR=1000

#==============================================================================
# SSL AND SECURITY CONFIGURATION
#==============================================================================

# SSL Configuration for Development
DISABLE_SSL_FOR_LOCALHOST=true
FORCE_SSL_IN_PRODUCTION=true
SSL_DEVELOPMENT_MODE=true

#==============================================================================
# ADMIN CONFIGURATION
#==============================================================================

# First Admin User (created on first startup)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin123

#==============================================================================
# ENVIRONMENT CONFIGURATION
#==============================================================================

# Environment Type
NODE_ENV=development

# Debug and Logging
DEBUG=true
LOG_LEVEL=INFO